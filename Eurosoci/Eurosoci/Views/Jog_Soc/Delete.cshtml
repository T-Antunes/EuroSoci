@model Eurosoci.Models.Jog_Soc

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar Sócio</h2>

<h3>Tem a certeza que pretende remover o jogador da sociedade?</h3>
<div>
    <h4>Sócio</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Jogador)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Jogador.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sociedade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sociedade.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataEntrada)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataEntrada)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataSaida)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataSaida)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Lista de Sócios", "Index")
        </div>
    }
</div>
